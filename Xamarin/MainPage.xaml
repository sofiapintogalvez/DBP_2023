<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormCV.MainPage">

    <StackLayout BackgroundColor="Lavender" Padding="30">
        <Label Text="Formulario-CV" FontSize="Title" HorizontalTextAlignment="Center" Padding="10"/>

        <Label Text="Nombre" FontSize="Body" Padding="30,10,30,10"/>
        <Entry x:Name="nombreEntry" Placeholder="Nombre" Margin="0,10,0,0"/>

        <Label Text="Apellido" FontSize="Body" Padding="30,10,30,10"/>
        <Entry x:Name="apellidoEntry" Placeholder="Apellido" Margin="0,10,0,0"/>

        <Label Text="Ocupacion" FontSize="Body" Padding="30,10,30,10"/>
        <Entry x:Name="ocupacionEntry" Placeholder="Ocupacion" Margin="0,10,0,0"/>

        <Label Text="Correo" FontSize="Body" Padding="30,10,30,10"/>
        <Entry x:Name="correoEntry" Placeholder="Correo" Keyboard="Email" Margin="0,10,0,0"/>

        <Label Text="Telefono" FontSize="Body" Padding="30,10,30,10"/>
        <Entry x:Name="telefonoEntry" Placeholder="Telefono" Keyboard="Telephone" Margin="0,10,0,0"/>

        <Button Text="Enviar" BackgroundColor="LightSeaGreen" TextColor="White" Margin="0,20,0,0" Clicked="OnSubmitClicked"/>
    </StackLayout>

</ContentPage>
