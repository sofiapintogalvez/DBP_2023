<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormCV.CV">
    <ScrollView>
        <StackLayout BackgroundColor="Lavender" Padding="30">
            <Label Text="Curriculum Vitae" FontSize="Large" HorizontalOptions="Center"/>

            <Frame CornerRadius="10" Padding="15" Margin="10">
                <StackLayout>
                    <Label Text="Nombre: " FontAttributes="Bold"/>
                    <Label x:Name="nombreLabel"/>

                    <Label Text="Apellido: " FontAttributes="Bold"/>
                    <Label x:Name="apellidoLabel"/>

                    <Label Text="Ocupacion: " FontAttributes="Bold"/>
                    <Label x:Name="ocupacionLabel"/>

                    <Label Text="Correo: " FontAttributes="Bold"/>
                    <Label x:Name="correoLabel"/>

                    <Label Text="Telefono: " FontAttributes="Bold"/>
                    <Label x:Name="telefonoLabel"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
